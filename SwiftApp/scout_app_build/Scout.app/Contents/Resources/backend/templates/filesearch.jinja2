<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>File Search - MindRoot Knowledge Graph</title>
  
  <!-- Core styles -->
  <link rel="stylesheet" href="/chat/static/css/main.css">
  
  <!-- Core scripts -->
  <script type="module" src="/chat/static/js/lit-core.min.js"></script>
  <script type="module" src="/chat/static/js/base.js"></script>
  
  <!-- File search components -->
  <script type="module" src="/kg/static/js/sse-handler.js"></script>
  <script type="module" src="/kg/static/js/command-handler.js"></script>
  <script type="module" src="/kg/static/js/kg-file-search.js"></script>
  
  <!-- Favicon -->
  <link rel="apple-touch-icon" sizes="180x180" href="/imgs/logo.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/imgs/logo.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/imgs/logo.png">
  
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--background-color, #0a0a19);
      color: var(--text-color, #ffffff);
      overflow: hidden;
    }
    
    .page-container {
      width: 100vw;
      height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    .header {
      background: rgba(0, 0, 0, 0.2);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      padding: 1rem 2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-shrink: 0;
    }
    
    .header-title {
      font-size: 1.5rem;
      font-weight: 600;
      margin: 0;
    }
    
    .header-nav {
      display: flex;
      gap: 1rem;
    }
    
    .header-nav a {
      color: var(--text-color);
      text-decoration: none;
      padding: 0.5rem 1rem;
      border-radius: 4px;
      transition: background 0.2s;
    }
    
    .header-nav a:hover {
      background: rgba(255, 255, 255, 0.1);
    }
    
    .main-content {
      flex: 1;
      overflow: hidden;
    }
  </style>
</head>
<body>
  <script>
    // Initialize global variables
    window.theme = 'default';
    window.access_token = "{{ access_token }}";
    console.log('File search page initialized');
  </script>
  
  <div class="page-container">
    <div class="header">
      <h1 class="header-title">Knowledge Graph File Search</h1>
      <nav class="header-nav">
        <a href="/chat">Chat</a>
        <a href="/admin">Admin</a>
      </nav>
    </div>
    
    <div class="main-content">
      <kg-file-search></kg-file-search>
    </div>
  </div>
</body>
</html>
